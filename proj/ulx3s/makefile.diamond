# ******* project, board and chip name *******
PROJECT = next186
BOARD = ulx3s
# 12 25 45 85
FPGA_SIZE = 25
FPGA_PACKAGE = 6bg381c
# config flash: 1:SPI (standard), 4:QSPI (quad)
FLASH_SPI = 4
# chip: is25lp032d is25lp128f s25fl164k
FLASH_CHIP = is25lp128f

# ******* if programming with OpenOCD *******
# using local latest openocd until in linux distribution
OPENOCD=openocd_ft232r
# default onboard usb-jtag
OPENOCD_INTERFACE=$(SCRIPTS)/ft231x.ocd
# ulx3s-jtag-passthru
#OPENOCD_INTERFACE=$(SCRIPTS)/ft231x2.ocd
# ulx2s
#OPENOCD_INTERFACE=$(SCRIPTS)/ft232r.ocd
# external jtag
#OPENOCD_INTERFACE=$(SCRIPTS)/ft2232.ocd

# ******* design files *******
CONSTRAINTS = ../../constraints/ulx3s_v20_segpdi.lpf
TOP_MODULE = ulx3s_next186
TOP_MODULE_FILE = ../../emard/top/$(TOP_MODULE).v

CLK0_NAME = clk_system
CLK0_FILE_NAME = ../../emard/clocks/$(CLK0_NAME).v
CLK0_OPTIONS = \
  --module=$(CLK0_NAME) \
  --clkin_name=clk_in \
  --clkin=25 \
  --clkout0_name=clk_125 \
  --clkout0=125 \
  --clkout1_name=clk_25 \
  --clkout1=25 \
  --clkout2_name=clk_125a \
  --clkout2=125 \
  --clkout3_name=clk_125p \
  --clkout3=125 --phase3=180 \

CLK1_NAME = clk_aux
CLK1_FILE_NAME = ../../emard/clocks/$(CLK1_NAME).v
CLK1_OPTIONS = \
  --module=$(CLK1_NAME) \
  --clkin_name=clk_in \
  --clkin=25 \
  --clkout0_name=clk_50 \
  --clkout0=50 \
  --clkout1_name=clk_29 \
  --clkout1=29.4912 \
  --clkout2_name=clk_11 \
  --clkout2=11.2896 \
  --clkout3_name=clk_75 \
  --clkout3=75 \

VERILOG_FILES = \
  $(TOP_MODULE_FILE) \
  $(CLK0_FILE_NAME) \
  $(CLK1_FILE_NAME) \
  ../../emard/replace/ddr_186.v \
  ../../Next186_SoC/cache_controller.v \
